
@{
    ViewBag.Title = "Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Currency_Exchange2022.ViewModels.Currency.AddCurrencyViewModel

<h2>Add a new Currency</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Currency", FormMethod.Post))
        {
            
            <div class="form-group">
                @Html.LabelFor(m => m.Code)
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BuyRate)
                @Html.TextBoxFor(m => m.BuyRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.BuyRate, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SellRate)
                @Html.TextBoxFor(m => m.SellRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SellRate, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Shto</button>
        }
    </div>
</div>