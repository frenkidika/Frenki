
@{
    ViewBag.Title = "Pricing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Currency_Exchange2022.ViewModels.Currency.AddCurrencyViewModel

<h2>SHto Monedhe te re</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Currency", FormMethod.Post))
        {
            @*<div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
